# Polymarket Configuration
# Get your private key from your Polygon wallet
POLYMARKET_PRIVATE_KEY=0x...

# API credentials (generate using: python main.py derive-key)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=

# Proxy wallet (your Polymarket smart contract wallet address)
# Find this on polymarket.com in your account settings or wallet section
POLYMARKET_PROXY_WALLET=

# Polygon RPC (optional, defaults to public RPC)
POLYGON_RPC_URL=https://polygon-rpc.com

# Twilio SMS Configuration
# Get credentials from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Phone number to receive alerts
ALERT_PHONE_NUMBER=+1234567890
